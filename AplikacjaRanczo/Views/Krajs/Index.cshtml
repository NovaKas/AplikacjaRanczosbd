@model IEnumerable<AplikacjaRanczo.Models.Kraj>

@{
    ViewBag.Title = "Kraje";
}


<p>
    @Html.ActionLink("Dodaj kraj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.KrajID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.KrajID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.KrajID })
        </td>
    </tr>
}

</table>
